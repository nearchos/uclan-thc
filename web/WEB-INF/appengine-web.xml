<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">

    <!--UCLan Treasure Hunt Challenge server app-->
    <application>uclan-thc</application>
    <version>1</version>
    <threadsafe>true</threadsafe>

    <!-- Configure java.util.logging -->
    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
    </system-properties>

    <!-- Plain files -->
    <static-files>
        <include path="/app/**" />
        <include path="/robots.txt" />
        <include path="/uclan.png" />
        <include path="/favicon.png" />
        <include path="/uclan_thc.css" />
        <include path="/guide/*.html" />
        <include path="/live/*.html" />
        <include path="/live/vue-google-maps.js" />
        <include path="/live/uclan_small.png" />
        <include path="/live/map-markers/*.png" />
    </static-files>

</appengine-web-app>
